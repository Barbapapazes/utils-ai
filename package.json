{
  "publisher": "barbapapazes",
  "name": "utils-ai-vscode",
  "displayName": "Utils AI",
  "type": "module",
  "version": "0.4.6",
  "private": true,
  "packageManager": "pnpm@9.5.0+sha512.140036830124618d624a2187b50d04289d5a087f326c9edfc0ccd733d76c4f52c3a313d4fc148794a2a9d81553016004e6742e8cf850670268a7387fc220c903",
  "description": "Write faster with AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/barbapapazes/utils-ai"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.cjs",
  "icon": "./images/icon.png",
  "engines": {
    "vscode": "^1.83.1"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "Utils AI",
      "properties": {
        "utilsAi.prompts": {
          "type": "array",
          "description": "Prompts",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the prompt"
              },
              "content": {
                "type": "string",
                "description": "Content of the prompt"
              }
            },
            "required": [
              "name",
              "content"
            ]
          }
        },
        "utilsAi.ai": {
          "type": "array",
          "description": "AI",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the AI"
              },
              "type": {
                "type": "string",
                "description": "Type of the AI",
                "enum": [
                  "openai"
                ]
              },
              "keyName": {
                "type": "string",
                "description": "Key name to use to access the AI"
              }
            },
            "required": [
              "name",
              "type",
              "keyName"
            ]
          }
        },
        "utilsAi.actions": {
          "type": "array",
          "description": "Actions",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the action"
              },
              "ai": {
                "type": "string",
                "description": "AI to use for the action"
              },
              "prompt": {
                "type": "string",
                "description": "Prompt to use for the action"
              },
              "git": {
                "type": "object",
                "description": "Git options",
                "properties": {
                  "commitMessageBeforeAction": {
                    "type": "string",
                    "description": "Before running the action, the file will be committed with this message. You can use `__ask__` to ask for a message"
                  },
                  "commitMessageAfterAction": {
                    "type": "string",
                    "description": "After running the action, the file will be committed with this message. You can use `__ask__` to ask for a message"
                  }
                }
              }
            },
            "required": [
              "name",
              "ai",
              "prompt"
            ]
          }
        }
      }
    },
    "commands": [
      {
        "command": "barbapapazes.utils-ai.addKey",
        "title": "Add Key",
        "category": "Utils AI"
      },
      {
        "command": "barbapapazes.utils-ai.runAction",
        "title": "Run action",
        "category": "Utils AI"
      },
      {
        "command": "barbapapazes.utils-ai.checkConfig",
        "title": "Check configuration",
        "category": "Utils AI"
      }
    ]
  },
  "scripts": {
    "dev": "pnpm run build --watch src",
    "build": "tsup src/index.ts",
    "vscode:prepublish": "pnpm run build",
    "publish": "vsce publish --no-dependencies",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.23.2",
    "@swc/core": "^1.7.1",
    "@types/node": "^20.14.12",
    "@types/vscode": "^1.91.0",
    "@vscode/vsce": "^2.31.1",
    "eslint": "9.5.0",
    "tsup": "^8.2.3",
    "typescript": "^5.5.4"
  }
}
