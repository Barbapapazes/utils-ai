{
  "publisher": "barbapapazes",
  "name": "utils-ai-vscode",
  "displayName": "Utils AI",
  "type": "module",
  "version": "0.3.1",
  "private": true,
  "description": "Write faster with AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/barbapapazes/utils-ai",
    "directory": "packages/utils-ai-vscode"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.cjs",
  "icon": "./images/icon.png",
  "engines": {
    "vscode": "^1.83.1"
  },
  "activationEvents": [],
  "contributes": {
    "configuration": {
      "title": "Utils AI",
      "properties": {
        "utilsAi.endpoint": {
          "type": "string",
          "default": "https://api.openai.com/v1/chat/completions",
          "markdownDescription": "The endpoint of the AI server. **Must be compatible with the OpenAI completions API**"
        },
        "utilsAi.model": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "markdownDescription": "The model to use for the AI. The model is passed to the AI server using the body."
        },
        "utilsAi.contextWindow": {
          "type": "number",
          "default": 16385,
          "markdownDescription": "Context window of the token. This is used to know how to split the text into chunks to allow large text to be processed."
        },
        "utilsAi.outputTokens": {
          "type": "number",
          "default": 4096,
          "markdownDescription": "Maximal tokens that can be generated by the AI. Smaller values will be faster but could cut the text."
        },
        "utilsAi.preferredLanguage": {
          "type": "string",
          "default": "en",
          "enum": [
            "en",
            "fr"
          ],
          "enumDescriptions": [
            "Select English Prompt",
            "Select French Prompt"
          ]
        }
      }
    },
    "commands": [
      {
        "command": "barbapapazes.utils-ai-vscode.addAuthToken",
        "title": "Add an authorization token",
        "category": "Utils AI"
      },
      {
        "command": "barbapapazes.utils-ai-vscode.deleteAuthToken",
        "title": "Remove the authorization token",
        "category": "Utils AI"
      },
      {
        "command": "barbapapazes.utils-ai-vscode.correct",
        "title": "Correct current file using AI",
        "category": "Utils AI",
        "icon": {
          "light": "./images/light.svg",
          "dark": "./images/dark.svg"
        }
      },
      {
        "command": "barbapapazes.utils-ai-vscode.description",
        "title": "Generate description from current file using AI",
        "category": "Utils AI"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "barbapapazes.utils-ai-vscode.correct",
          "when": "editorLangId == 'markdown'"
        },
        {
          "command": "barbapapazes.utils-ai-vscode.description",
          "when": "editorLangId == 'markdown'"
        }
      ],
      "editor/title": [
        {
          "command": "barbapapazes.utils-ai-vscode.correct",
          "group": "navigation",
          "when": "editorLangId == 'markdown'"
        }
      ]
    }
  },
  "scripts": {
    "dev": "pnpm run build --watch src",
    "build": "tsup src/index.ts",
    "vscode:prepublish": "pnpm run build",
    "publish": "vsce publish --no-dependencies"
  },
  "dependencies": {
    "utils-ai": "workspace:*"
  },
  "devDependencies": {
    "@poppinss/utils": "^6.7.3",
    "@types/node": "^18.18.6",
    "@types/vscode": "^1.83.1",
    "@vscode/vsce": "^2.21.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  }
}
